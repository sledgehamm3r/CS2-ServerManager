<Window x:Class="CS2ServerManager.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installation Progress" 
        Height="150" Width="350" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="StatusTextBlock" Text="Installing..." FontSize="14" Margin="0,0,0,10" TextAlignment="Center"/>
            <ProgressBar x:Name="ProgressBar" Height="25" Minimum="0" Maximum="100" />
        </StackPanel>
    </Grid>
</Window>
